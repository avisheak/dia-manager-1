<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.diamanager">


    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.assignment.diamanager.activity.MainActivity"
            android:label="@string/title_activity_icon_text_tabs"
            android:windowSoftInputMode="adjustPan"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.assignment.diamanager.modules.add_doctor.AddDoctorActivity"
            android:label="@string/title_activity_add_doctor"
            android:theme="@style/MyMaterialTheme"
            android:parentActivityName="com.assignment.diamanager.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.assignment.diamanager.activity.MainActivity" />
        </activity>

        <activity
            android:name="com.assignment.diamanager.modules.app_appointment.AddAppointmentActivity"
            android:label="@string/title_activity_add_appointment"
            android:theme="@style/MyMaterialTheme"
            android:parentActivityName="com.assignment.diamanager.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.assignment.diamanager.activity.MainActivity" />
        </activity>

        <activity
            android:name="com.assignment.diamanager.modules.add_reminder.AddReminderActivity"
            android:label="@string/title_activity_add_reminder"
            android:theme="@style/MyMaterialTheme"
            android:parentActivityName="com.assignment.diamanager.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.assignment.diamanager.activity.MainActivity" />
        </activity>

        <activity
            android:name="com.assignment.diamanager.modules.my_profile.MyProfileActivity"
            android:label="@string/title_activity_add_reminder"
            android:theme="@style/MyMaterialTheme"
            android:parentActivityName="com.assignment.diamanager.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.assignment.diamanager.activity.MainActivity" />
        </activity>


    </application>

</manifest>